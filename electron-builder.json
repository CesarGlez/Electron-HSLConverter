{
    "appId": "com.cesar.hsl-converter",
    "asarUnpack": [
        "**/ffmpeg-static/**",
        "**/fluent-ffmpeg/**",
        "**/ffprobe-static/**"
    ],
    "files": [
        "dist-electron/**/*",
        "dist-react/**/*",
        "node_modules/ffmpeg-static/**/*",
        "node_modules/fluent-ffmpeg/**",
        "node_modules/ffprobe-static/**"
    ],
    "mac": {
        "target": "dmg",
        "icon": "./hsl-converter-icon-mac.png"
    },
    "linux": {
        "target": "AppImage",
        "category": "Utility"
    },
    "win": {
        "target": ["portable", "msi"],
        "icon": "./hsl-converter-icon.png"
    }
}